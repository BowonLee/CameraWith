<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false" >
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <padding>4dp</padding>
                    <size android:width="36dp" android:height="36dp"></size>
                    <solid android:color="@android:color/transparent"></solid>
                </shape>
            </item>
            <item android:drawable="@drawable/baseline_timer_white_18" android:width="18dp" android:height="18dp" android:gravity="center">
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true"  >
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <padding>4dp</padding>
                    <size android:width="36dp" android:height="36dp"></size>
                    <solid android:color="@android:color/transparent"></solid>
                </shape>
            </item>
            <item android:width="18dp" android:height="18dp" android:drawable="@drawable/baseline_timer_off_white_18" android:gravity="center"></item>
        </layer-list>
    </item>

</selector>